<ui:Page
    x:Class="APKInstaller.Pages.SettingsPages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:APKInstaller.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:APKInstaller.Helpers"
    xmlns:local="clr-namespace:APKInstaller.Pages.SettingsPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:str="clr-namespace:APKInstaller.Strings.SettingsPage"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer Margin="{x:Static helper:UIHelper.ScrollViewerMargin}">
            <StackPanel Margin="16">
                <controls:SettingsGroup Margin="0,-32,0,0" Header="{x:Static str:SettingsStrings.DeviceSettingsHeader_Header}">
                    <ui:ListView
                        x:Name="SelectDeviceBox"
                        Margin="-2,0"
                        ItemsSource="{Binding DeviceList, Mode=OneWay}"
                        SelectionChanged="SelectDeviceBox_SelectionChanged">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <ListViewItem Background="Transparent">
                                    <controls:Setting
                                        Description="{Binding State}"
                                        Header="{Binding Name}"
                                        Icon="&#xE8EA;"
                                        Style="{StaticResource ListViewItemContentSettingStyle}" />
                                </ListViewItem>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                    <Expander IsExpanded="{Binding IsOnlyWSA, Converter={StaticResource BoolNegationConverter}}" Style="{DynamicResource SettingExpanderStyle}">
                        <Expander.Header>
                            <controls:Setting
                                x:Uid="/SettingsPage/OnlyWSASettings"
                                Description="{x:Static str:SettingsStrings.OnlyWSASettings_Description}"
                                Header="{x:Static str:SettingsStrings.OnlyWSASettings_Header}"
                                Icon="&#xE975;"
                                Style="{DynamicResource ExpanderHeaderSettingStyle}">
                                <controls:Setting.ActionContent>
                                    <ui:ToggleSwitch IsOn="{Binding IsOnlyWSA, Mode=TwoWay}" />
                                </controls:Setting.ActionContent>
                            </controls:Setting>
                        </Expander.Header>
                        <Expander.Content>
                            <controls:Setting
                                Description="{x:Static str:SettingsStrings.OnlyWSASettings_Description}"
                                Header="{x:Static str:SettingsStrings.ConnectDevice_Header}"
                                Style="{StaticResource ExpanderContentSettingStyle}">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBox x:Name="ConnectIP" MinWidth="{StaticResource SettingActionControlMinWidth}" />
                                    <Button
                                        Width="40"
                                        Height="36"
                                        Click="Button_Click"
                                        Content="&#xE71B;"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        Tag="Connect" />
                                </ui:SimpleStackPanel>
                            </controls:Setting>
                        </Expander.Content>
                    </Expander>
                </controls:SettingsGroup>
                <controls:SettingsGroup Margin="0,-32,0,0" Header="{x:Static str:SettingsStrings.OthersSettingsHeader_Header}">
                    <controls:Setting Header="{x:Static str:SettingsStrings.ResetSettings_Header}" Icon="&#xE777;">
                        <!--<controls:Setting.ActionContent>
                            <Button Name="Reset" x:Uid="/SettingsPage/ResetSettingsButton">
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock
                                                x:Uid="/SettingsPage/ResetSettingsTitle"
                                                Margin="0,0,0,12"
                                                Style="{ThemeResource BaseTextBlockStyle}" />
                                            <Button
                                                x:Uid="/SettingsPage/ResetSettingsConfirm"
                                                Click="Button_Click"
                                                Tag="Reset" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </controls:Setting.ActionContent>-->
                    </controls:Setting>
                    <controls:Setting Header="{x:Static str:SettingsStrings.CloseADBSettings_Header}" Icon="&#xE756;">
                        <controls:Setting.ActionContent>
                            <ui:ToggleSwitch IsOn="{Binding IsCloseADB, Mode=TwoWay}" />
                        </controls:Setting.ActionContent>
                    </controls:Setting>
                    <Button
                        x:Name="GoToTestPage"
                        Click="Button_Click"
                        Style="{DynamicResource SettingButtonStyle}"
                        Tag="TestPage">
                        <Button.Content>
                            <controls:Setting
                                Header="{x:Static str:SettingsStrings.GoToTestPage_Header}"
                                Icon="&#xEC7A;"
                                Style="{DynamicResource ButtonContentSettingStyle}" />
                        </Button.Content>
                    </Button>
                </controls:SettingsGroup>
                <controls:SettingsGroup Margin="0,-32,0,0" Header="{x:Static str:SettingsStrings.AboutSettingsHeader_Header}">
                    <controls:Setting Header="{Binding VersionTextBlockText}" Icon="&#xE117;">
                        <controls:Setting.Description>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Style="{StaticResource SecondaryTextStyle}">
                                    <Run Text="{x:Static str:SettingsStrings.LastChecked_Text}" />
                                    <Run Text="{Binding UpdateDate, Mode=OneWay}" />
                                </TextBlock>
                                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                    <ui:HyperlinkButton
                                        Margin="0,0,2,0"
                                        Click="Button_Click"
                                        Content="{x:Static str:SettingsStrings.FeedbackLink_Content}"
                                        Tag="FeedBack" />
                                    <ui:HyperlinkButton
                                        Margin="2,0"
                                        Content="{x:Static str:SettingsStrings.ReleaseNotes_Content}"
                                        NavigateUri="https://github.com/Paving-Base/APK-Installer/releases/" />
                                </StackPanel>
                            </StackPanel>
                        </controls:Setting.Description>
                        <controls:Setting.ActionContent>
                            <ui:SimpleStackPanel
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="18">
                                <ui:ProgressRing
                                    Width="24"
                                    Height="24"
                                    Visibility="{Binding CheckingUpdate, Mode=OneWay}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{x:Static str:SettingsStrings.CheckingUpdates_Text}"
                                    Visibility="{Binding CheckingUpdate, Mode=OneWay}" />
                                <Button
                                    x:Name="Update"
                                    HorizontalAlignment="Right"
                                    Click="Button_Click"
                                    Content="{x:Static str:SettingsStrings.CheckUpdates_Content}"
                                    Tag="CheckUpdate"
                                    Visibility="{Binding CheckingUpdate, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='true'}" />
                            </ui:SimpleStackPanel>
                        </controls:Setting.ActionContent>
                    </controls:Setting>
                    <!--<InfoBar
                        x:Name="UpdateState"
                        IsClosable="True"
                        IsOpen="False">
                        <InfoBar.ActionButton>
                            <Button
                                x:Name="GotoUpdate"
                                x:Uid="/SettingsPage/GoToUpdate"
                                HorizontalAlignment="Right"
                                Click="GotoUpdate_Click"
                                Tag="{x:Bind IssuePath}" />
                        </InfoBar.ActionButton>
                    </InfoBar>-->
                </controls:SettingsGroup>
            </StackPanel>
        </ScrollViewer>
        <controls:TitleBar
            x:Name="TitleBar"
            BackgroundVisibility="Collapsed"
            Title="{x:Static str:SettingsStrings.TitleBar_Title}"
            BackRequested="TitleBar_BackRequested"/>
    </Grid>
</ui:Page>
